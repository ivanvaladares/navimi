{
  "compilerOptions": {
    "target": "es2017",
    "module": "none",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": false,
    "noEmitOnError": true
  },  
  "lib": ["dom", "es2015", "es2016"],
  "exclude": [
    ".git",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}