{
  "compilerOptions": {
    "target": "es2017",
    "module": "ES6",
    "outDir": "./dist",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": false,
    "allowJs": false,
    "noEmitOnError": true,
    "declaration": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },  
  "lib": ["dom", "es2017"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}