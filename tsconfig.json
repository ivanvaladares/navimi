{
  "compilerOptions": {
    "target": "es2017",
    "module": "none",
    "moduleResolution": "Node",
    "outFile": "./dist/navimi.js",
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": false,
    "allowJs": false,
    "noEmitOnError": true,
    "declaration": false,
    "esModuleInterop": true
  },  
  "lib": ["dom", "es2017"],
  "exclude": [
    ".git",
    "node_modules"
  ],
  "include": [
    "src"
  ]
